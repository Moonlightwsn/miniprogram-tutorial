/**app.wxss**/
page {
  height: 100%;
}

.container {
  background-color: #F7F7F7;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.header {
  display: flex;
  background-color: #f7f7f7;
  height: 36px;
  padding: 0 12px;
}

.header .title {
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  line-height: 36px;
  flex-grow: 1;
}

.header .icon {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 30px;
  height: 36px;
}
