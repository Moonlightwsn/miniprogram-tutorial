.messages {
  width: 100%;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  overflow-y: auto;
}

.messages .message {
  display: flex;
  padding: 8px;
}

.messages .message.reverse {
  flex-direction: row-reverse;
}

.messages .message .avatar {
  width: 42px;
  height: 42px;
  flex-shrink: 0;
  border-radius: 6px;
}

.messages .message .content {
  flex-grow: 1;
  background-color: #fff;
  border-radius: 6px;
  color: #000;
  padding: 10px;
  box-sizing: border-box;
  font-size: 13px;
  line-height: 22px;
  margin: 0 8px;
}

.messages .message.reverse .content {
  background-color: #07c160cc;
  color: #fff;
}

.messages .message .tail {
  flex-shrink: 0;
  width: 42px;
}

.inputArea {
  width: 100%;
  height: 56px;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-top: 1px solid #F0F0F0;
  padding: 0 16px;
  box-sizing: border-box;
}

.inputArea input {
  flex-grow: 1;
  height: 36px;
  border-radius: 6px;
  background-color: #fff;
}

.inputArea button {
  flex-shrink: 0;
  margin-left: 12px;
}