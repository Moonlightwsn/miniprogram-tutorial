<view data-weui-theme="light">
  <image class="card" mode="aspectFill" src="/images/emotion_bg.jpg">
    <view class="profile">
      <image class="avatar" src="/images/avatar/avatar_momo.jpg" alt="avatar" />
      <view class="info">
        <view>MoMo</view>
        <view class="wechat-serial">
          <text style="flex-shrink: 0;">微信号: momomomonononono</text>
          <view style="flex-grow: 1"></view>
          <view style="flex-shrink: 0;width: 64px;text-align: right;">
            <mp-icon icon="qr-code" style="margin-right: 8px;" size="{{14}}" color="rgba(255,255,255,0.65)" />
            <mp-icon icon="arrow" size="{{12}}" color="rgba(255,255,255,0.65)" />
          </view>
        </view>
      </view>
    </view>
  </image>
  <mp-cells extClass="classification">
    <mp-cell extClass="item" link>
      <image slot="title" class="title" src="/images/pay.png" />
      <view>支付</view>
    </mp-cell>
  </mp-cells>
  <mp-cells extClass="classification">
    <mp-cell extClass="item" link>
      <image slot="title" class="title" src="/images/collect.png" />
      <view>收藏</view>
    </mp-cell>
    <mp-cell extClass="item" link>
      <view slot="title" class="title">
        <mp-icon style="display: inline-flex;" color="#1890ff" size="{{19}}" icon="album"></mp-icon>
      </view>
      <view>朋友圈</view>
    </mp-cell>
    <mp-cell extClass="item" link>
      <image slot="title" class="title" src="/images/wallet.png" />
      <view>卡包</view>
    </mp-cell>
    <mp-cell extClass="item" link>
      <view slot="title" class="title">
        <mp-icon style="display: inline-flex;" color="#fa8c16" size="{{19}}" icon="sticker"></mp-icon>
      </view>
      <view>表情</view>
    </mp-cell>
  </mp-cells>
  <mp-cells extClass="classification">
    <mp-cell extClass="item" link>
      <view slot="title" class="title">
        <mp-icon style="display: inline-flex;" color="#1890ff" size="{{19}}" icon="setting"></mp-icon>
      </view>
      <view>设置</view>
    </mp-cell>
  </mp-cells>
</view>