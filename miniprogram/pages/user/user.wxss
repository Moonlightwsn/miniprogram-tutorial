.card {
  position: relative;
  width: 100%;
  height: 340px;
}

.card .profile {
  position: absolute;
  display: flex;
  top: 16px;
  left: 16px;
  right: 16px;
}

.card .profile .avatar {
  width: 52px;
  height: 52px;
  border-radius: 6px;
  margin-right: 16px;
}

.card .profile .info {
  color: #fff;
  font-size: 16px;
  flex-grow: 1;
}

.card .profile .info .wechat-serial {
  display: flex;
  padding: 6px 0;
  font-size: 12px;
  color: rgba(255,255,255,0.65);
}

.classification .item {
  padding: 12px 16px;
  font-size: 14px;
}

.classification .item .title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12px;
  text-align: center;
  width: 20px;
  height: 20px;
}